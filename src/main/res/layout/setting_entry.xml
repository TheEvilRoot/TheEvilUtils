<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp" android:paddingTop="20px" android:paddingBottom="20px">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/settings_enrty_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/settings_entry_value"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:gravity="center_vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="TextLabel"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorText"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/settings_enrty_icon"
        tools:layout_editor_absoluteY="8dp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/settings_entry_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/settings_enrty_label"
        android:gravity="center_vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="TextValue"
        android:textAllCaps="true"
        android:textColor="@color/colorText"
        android:textSize="14dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.97" />

    <ImageView
        android:id="@+id/settings_enrty_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        tools:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="6dp"
        android:paddingLeft="10px"
        android:adjustViewBounds="true"
        android:maxWidth="64px"
        android:maxHeight="64px"/>
</android.support.constraint.ConstraintLayout>